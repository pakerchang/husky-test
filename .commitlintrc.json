{
  "root": true,
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [2, "always", ["feat", "chore", "docs", "fix", "ref", "style"]],
    "type-empty": [2, "never"],
    "scope-enum": [2, "always", ["component", "document", "deps"]],
    "scope-empty": [2, "never"],
    "subject-case": [1, "always", "sentence-case"],
    "subject-empty": [2, "never"],
    "subject-full-stop": [1, "never"]
  }
}
